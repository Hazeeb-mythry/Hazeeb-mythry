/* Global Styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

/* Top Menu Styles */
.top_menu_w3layouts {
  background-color: #150814;
  padding: 10px;
}

.top_menu_w3layouts .container-fluid {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.top_menu_w3layouts .header_left ul,
.top_menu_w3layouts .header_right ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.top_menu_w3layouts .header_left ul li,
.top_menu_w3layouts .header_right ul li {
  display: inline-block;
  margin-right: 10px;
}

.top_menu_w3layouts .header_right .forms_right .text {
  color: #337ab7;
}

/* Navigation Styles */
.navigation ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.navigation li {
  display: inline-block;
  margin-right: 10px;
}

.navigation li a {
  color: #000;
  text-decoration: none;
}

/* Di-Virtual_Village_Tech Styles */
.di-virtual-village-tech {
  font-weight: bold;
  font-size: 25px;
  color: red;
  text-decoration: none;
}

.di-virtual-village-tech img {
  height: 30px;
}

/* Row Styles */
.row {
  margin-left: 30px;
  border-bottom-left-radius: 50px;
  background-color: #c7ff00;
  border-top-right-radius: 50px;
  margin-top: 20px;
}
.logo {
  text-align: center;
  margin-bottom: 20px;
}

.logo img {
  width: 200px;
  height: 100px;
}

h1 {
  text-align: center;
  font-size: 24px;
  margin-bottom: 10px;
}

p {
  text-align: center;
  font-size: 16px;
  margin-bottom: 20px;
}

.highlight {
  color: orange;
  font-weight: bold;
}